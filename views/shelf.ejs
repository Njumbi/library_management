<%- include('./includes/header') %>

<body>
    <%- include('./includes/navbar') %>
    <div class="container" style="margin-top: 10px">
        <div class="row" style="margin: 6px; float: right;">
            <button type="button" class="btn btn-outline-dark btn-lg" data-toggle="modal"
                data-target="#addShelfModal">Add
                Shelf</button>
        </div>
        <div class="modal fade" id="addShelfModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add Shelf</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form id="add_shelf_form">
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="exampleFormControlSelect1">Select Sub-Category</label>
                                <select class="form-control" id="subcat_select">
                                    <% for (subcategory of subcategorys){ %>
                                    <option value="<%= subcategory.id %>"><%= subcategory.name %></option>
                                    <% } %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="Shelf">Name</label>
                                <input type="text" class="form-control" id="shelf_name" placeholder="Shelf">
                            </div>
                            <div class="form-group">
                                <label for="Row">Row</label>
                                <input type="text" class="form-control" id="row" placeholder="row">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <table class="table table-bordered " id="shelves_table">

        </table>
    </div>
    <%-include('./includes/footer')%>